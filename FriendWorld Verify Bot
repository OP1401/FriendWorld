import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.messages = True

bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f'Bot ist eingeloggt als {bot.user}')
async def off_ready():
    print(f'BOt ist ausgeloggt als {bot.user}')
async def wartung():
    print(f'Bot ist in Wartungsarbeiten als {bot.user}')
async def on_member_join(member):
    channel = discord.utils.get(member.guild.text_channels, name="general")  # willkommens-nachrichten

@bot.command()
async def hallo(ctx):
    await ctx.send("Hallo! ðŸ˜Š")
async def verify(ctx):
    await ctx.send("Danke fÃ¼r deine Verifikation {user}")
async def info(ctx, member: discord.Member):
    embed = discord.Embed(title=f"Info Ã¼ber {member.name}", color=discord.Color.blue())
    embed.add_field(name="ID", value=member.id, inline=True)
    embed.add_field(name="Beigetreten", value=member.joined_at.strftime("%d.%m.%Y"), inline=True)
    embed.set_thumbnail(url=member.avatar.url)
    await ctx.send(embed=embed)
import random
async def zufall(ctx, *optionen):
    if not optionen:
        await ctx.send("Bitte gib Optionen an! Beispiel: `!zufall Pizza Burger Sushi`")
    else:
        await ctx.send(f"Ich entscheide mich fÃ¼r: **{random.choice(optionen)}**")
async def frage(ctx, *, text):
    antworten = ["Ja!", "Nein!", "Vielleicht...", "Frag spÃ¤ter nochmal!"]
    await ctx.send(random.choice(antworten))
from yt_dlp import YoutubeDL
async def play(ctx, url):
    voice_channel = ctx.author.voice.channel
    if not voice_channel:
        await ctx.send("Du musst in einem Sprachkanal sein!")
        return
import aiohttp
async def meme(ctx):
    async with aiohttp.ClientSession() as session:
        async with session.get("https://meme-api.com/gimme") as resp:
            data = await resp.json()
            embed = discord.Embed(title="Hier ist ein Meme fÃ¼r dich! ðŸ˜†")
            embed.set_image(url=data["url"])
            await ctx.send(embed=embed)





